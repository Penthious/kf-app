{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["app/(tabs)/*"],
      "@/store/*": ["src/store/*"],
      "@/theme/*": ["src/theme/*"],
      "@/catalogs/*": ["src/catalogs/*"],
      "@/features/*": ["src/features/*"],
      "@/expo-utils/*": ["src/expo-utils/*"],
      "@/models/*": ["src/models/*"],
      "@/db/*": ["src/db/*"]
    }
  }
}
