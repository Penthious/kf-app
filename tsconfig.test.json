{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "vitest", "node"],
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx"
  ],
  "exclude": ["node_modules", "ios", "android", "web-build"]
}
