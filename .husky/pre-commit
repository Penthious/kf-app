#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Format code with Prettier
echo "ğŸ¨ Formatting code with Prettier..."
yarn format

if [ $? -ne 0 ]; then
  echo "âŒ Prettier formatting failed. Please fix the formatting issues before committing."
  exit 1
fi

echo "âœ… Code formatting completed"

# Run TypeScript compilation check
echo "ğŸ“ Checking TypeScript compilation..."
yarn type-check

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… TypeScript compilation check passed"

# Run tests
echo "ğŸ§ª Running tests..."
yarn test:spec

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed"
